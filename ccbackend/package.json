{
  "name": "cuentasclaras-api",
  "version": "0.1.0",
  "description": "API mínima para Cuentas Claras basada en el esquema proporcionado",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "lint": "eslint . --ext .js && echo 'ESLint: Todo está correcto - No se encontraron errores'",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:health": "jest --runInBand test/health/",
    "test:health:verbose": "jest --runInBand --verbose test/health/",
    "test:ci": "jest --runInBand --coverage --watchAll=false",
    "clean": "rm -rf coverage && rm -rf .nyc_output",
    "docker:build": "docker build -t cuentasclaras-api .",
    "docker:run": "docker run -p 3000:3000 cuentasclaras-api",
    "prepare": "husky install"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "helmet": "^6.0.1",
    "joi": "^17.10.1",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.9",
    "qrcode": "^1.5.1",
    "sequelize": "^6.37.7",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.3",
    "transbank-sdk": "^6.1.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.22.20",
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.8",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
